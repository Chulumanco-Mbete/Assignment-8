<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Assignment8.Models"
             x:Class="Assignment8.ProfilePage"
             BackgroundColor="#f9f9f9">

    <VerticalStackLayout         
        Padding="30,0"
        Spacing="25">

        <Label Text="User Information" FontAttributes="Bold" FontSize="Medium"/>

        <Image Source="profile.png" Aspect="AspectFit" HeightRequest="100" WidthRequest="100"/>

        <Button
            x:Name="ProfileBtn"
            Text="Account Details"
            HorizontalOptions="CenterAndExpand"
            Clicked="ProfileBtn_Clicked"
            HeightRequest="50"
            WidthRequest="200"
            BorderColor="Black"
            BorderWidth="5"
            TextColor="Black"
            BackgroundColor="LightSteelBlue"
            Margin="10"/>
    </VerticalStackLayout>
</ContentPage>
